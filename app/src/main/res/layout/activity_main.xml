<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom utilisateur" />

        <Spinner
            android:id="@+id/spLang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thème sombre" />

            <Switch
                android:id="@+id/swDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <EditText
            android:id="@+id/etToken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Token (stockage chiffré uniquement)"
            android:inputType="textPassword"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnSavePrefs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sauvegarder Prefs"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnLoadPrefs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Charger Prefs" />

        <Button
            android:id="@+id/btnSaveJson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sauvegarder JSON" />

        <Button
            android:id="@+id/btnLoadJson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Charger JSON" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tout effacer" />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>